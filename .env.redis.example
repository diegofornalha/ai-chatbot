# Redis Configuration
# Copy this to .env.local and configure your Redis settings

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=ai-chatbot:

# Redis Connection Settings
REDIS_CONNECTION_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3
REDIS_LAZY_CONNECT=true
REDIS_AUTO_PIPELINE=true

# Redis Memory Policy
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Cache Settings
REDIS_CACHE_DEFAULT_TTL=3600
REDIS_CACHE_MAX_SIZE=100

# Session Settings
REDIS_SESSION_TTL=86400
REDIS_SESSION_PREFIX=session:

# Rate Limiting
REDIS_RATE_LIMIT_PREFIX=rate_limit:
REDIS_RATE_LIMIT_WINDOW=900
REDIS_RATE_LIMIT_MAX=100

# Health Check Settings
REDIS_HEALTH_CHECK_INTERVAL=30000
REDIS_HEALTH_CHECK_TIMEOUT=5000

# Fallback Settings
REDIS_FALLBACK_ENABLED=true
REDIS_FALLBACK_AUTO_SYNC=true
REDIS_FALLBACK_SYNC_INTERVAL=30
REDIS_FALLBACK_MAX_MEMORY=100

# Pub/Sub Settings
REDIS_PUBSUB_BUFFER_SIZE=100
REDIS_PUBSUB_MAX_BUFFER=1000

# Production Redis URLs (alternative to individual settings)
# REDIS_URL=redis://username:password@hostname:port/database
# REDIS_TLS_URL=rediss://username:password@hostname:port/database

# Redis Cluster Settings (if using Redis Cluster)
# REDIS_CLUSTER_HOSTS=host1:port1,host2:port2,host3:port3
# REDIS_CLUSTER_PASSWORD=cluster_password

# Redis Sentinel Settings (if using Redis Sentinel)
# REDIS_SENTINEL_HOSTS=sentinel1:port1,sentinel2:port2
# REDIS_SENTINEL_NAME=mymaster
# REDIS_SENTINEL_PASSWORD=sentinel_password